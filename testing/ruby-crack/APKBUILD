# Maintainer: Will Sinatra <wpsinatra@gmail.com>
# Contributor: Will Sinatra <wpsinatra@gmail.com>
pkgname=ruby-crack
_gemname=${pkgname#ruby-}
pkgver=1.0.0
pkgrel=0
pkgdesc="simple json and xml parsing ripped from merb and rails"
url="https://rubygems.org/gems/crack"
arch="noarch"
license="MIT"
checkdepends="ruby-rake ruby-bundler ruby-test-unit ruby-minitest ruby-minitest-autotest"
depends="ruby-rexml ruby-bigdecimal"
source="$pkgname-$pkgver.tar.gz::https://github.com/jnunemaker/crack/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/$_gemname-$pkgver"
subpackages="$pkgname-doc"

prepare() {
	default_prepare

	sed -i '/spec.signing_key/d' $_gemname.gemspec
}

build() {
	gem build $_gemname.gemspec
}

check() {
	rake test
}

package() {
	local gemdir="$pkgdir/$(ruby -e 'puts Gem.default_dir')"

	gem install --local \
		--install-dir "$gemdir" \
		--ignore-dependencies \
		--no-document \
		--verbose \
		$_gemname

	rm -r "$gemdir"/cache \
		"$gemdir"/build_info \
		"$gemdir"/doc

	install -Dm644 LICENSE "$pkgdir"/usr/share/doc/$pkgname/LICENSE

}

sha512sums="
01f2231033a64aa3a107de3c0185559800be32c679671835962bd4e8f74cb644b9cb1e4895880ab03bc15e82aac465875d1ce187b977be65f514282718b7837c  ruby-crack-1.0.0.tar.gz
"
