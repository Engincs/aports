maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=android-translation-layer
pkgver=0_git20250806
pkgrel=0
_commit="d52985a6df81d73a8f6dfbdee337f7ff90b724cb"
pkgdesc="A translation layer for running Android apps on a Linux system"
url="https://gitlab.com/android_translation_layer/android_translation_layer"
arch="x86_64 aarch64 armv7 x86"
license="GPL-3.0-only"
# libopensles-standalone is not strictly required but some Android applications depend on it
depends="libopensles-standalone"
makedepends="
	alsa-lib-dev
	bionic_translation-dev
	art_standalone-dev
	ffmpeg-dev
	fontconfig-dev
	glib-dev
	gtk4.0-dev
	java-common
	libandroidfw-dev
	libgudev-dev
	libportal-dev
	meson
	openjdk8-jdk
	openxr-dev
	vulkan-loader-dev
	webkit2gtk-6.0-dev
	"
subpackages="$pkgname-dbg"
source="https://gitlab.com/mis012/android_translation_layer/-/archive/$_commit/android_translation_layer-$_commit.tar.gz"
builddir="$srcdir/android_translation_layer-$_commit"

build() {
	abuild-meson \
		. output
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
c4249a0c20a098e755a9c2eaa088ba717e2aaabb0ced66b4efe78eb35555c9ffb694987375ad7ff19c7e0f72f7b816366fee087ea12e805867b3f57691c81350  android_translation_layer-d52985a6df81d73a8f6dfbdee337f7ff90b724cb.tar.gz
"
