maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=android-translation-layer
pkgver=0_git20250914
pkgrel=0
_commit="9de91586994af5078decda17db92ce50c5673951"
pkgdesc="A translation layer for running Android apps on a Linux system"
url="https://gitlab.com/android_translation_layer/android_translation_layer"
arch="x86_64 aarch64 armv7 x86"
license="GPL-3.0-only"
# libopensles-standalone is not strictly required but some Android applications depend on it
depends="libopensles-standalone"
makedepends="
	alsa-lib-dev
	bionic_translation-dev
	art_standalone-dev
	ffmpeg-dev
	fontconfig-dev
	glib-dev
	gtk4.0-dev
	java-common
	libandroidfw-dev
	libgudev-dev
	libportal-dev
	meson
	openjdk8-jdk
	openxr-dev
	vulkan-loader-dev
	webkit2gtk-6.0-dev
	"
subpackages="$pkgname-dbg"
source="https://gitlab.com/mis012/android_translation_layer/-/archive/$_commit/android_translation_layer-$_commit.tar.gz"
builddir="$srcdir/android_translation_layer-$_commit"

build() {
	abuild-meson \
		. output
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
3eda29c7bd75de14e9b6901756ed9fc6562eab2c85bb41a0ddd83c0cb1a572ae0377f39d7065a97cf26559c52c86622f35762cf54f0d0152ccf7f4bf6cab5861  android_translation_layer-9de91586994af5078decda17db92ce50c5673951.tar.gz
"
