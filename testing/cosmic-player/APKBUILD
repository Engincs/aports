# Contributor: Clayton Craft <clayton@craftyguy.net>
# Maintainer: Clayton Craft <clayton@craftyguy.net>
pkgname=cosmic-player
pkgver=1.0.0_beta1_p1
_upstreamver="${pkgver/_beta/-beta.}"
_upstreamver="${_upstreamver/_p/.}"
pkgrel=0
pkgdesc="Media player for the COSMIC Desktop Environment"
url="https://github.com/pop-os/cosmic-player"
# loongarch64: https://github.com/bytecodealliance/rustix/issues/1496
arch="all !loongarch64"
license="GPL-3.0-only"
depends="
	gst-plugins-good
"
makedepends="
	cargo
	clang-libclang
	glib-dev
	gst-plugins-base-dev
	gstreamer-dev
	just
	libxkbcommon-dev
	wayland-dev
"
options="net !check"  # fetch dependencies, no tests
source="$pkgname-$pkgver.tar.gz::https://github.com/pop-os/cosmic-player/archive/refs/tags/epoch-$_upstreamver.tar.gz"
builddir="$srcdir/$pkgname-epoch-$_upstreamver"

prepare() {
	default_prepare
	cargo fetch --target="$CTARGET" --locked
}

build() {
	just build-release --frozen
}

check() {
	cargo test --release --frozen
}

package() {
	just rootdir="$pkgdir" install
}

sha512sums="
54d00fc4695e684d35b18ca68844d8b95cee99d8d72cafa69b270ad30cd6d66cd993c246e846717b848a78cf85ecacf2b0372d26ef253b110ea736a098b77e34  cosmic-player-1.0.0_beta1_p1.tar.gz
"
