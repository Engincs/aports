# Contributor: Henrik Riomar <henrik.riomar@gmail.com>
# Maintainer: Henrik Riomar <henrik.riomar@gmail.com>
pkgname=py3-requests-pkcs12
_pkgname=requests_pkcs12
pkgver=1.25
pkgrel=0
pkgdesc="PKCS#12 support to the Python requests library"
url="https://github.com/m-click/requests_pkcs12"
arch="noarch"
license="ISC"
depends="
	py3-cryptography
	py3-requests
	python3
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
subpackages="$pkgname-pyc"
options="!check" # No testsuite
source="$pkgname-$pkgver.tar.gz::https://github.com/m-click/$_pkgname/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" .dist/*.whl
}

sha512sums="
7805159bdd826db34acca231236b462d514ba765bc9c3a2c0337b79b06b169ac8941f90493e24ca9eaf784f9bffabd0a6499672ddbb4f376067204d63cf1fcc7  py3-requests-pkcs12-1.25.tar.gz
"
