# Maintainer: Andy Postnikov <apostnikov@gmail.com>
pkgname=php85-spx
_extname=spx
pkgver=0.4.20
pkgrel=1
pkgdesc="A simple & straight-to-the-point PHP 8.5 profiling extension with its built-in web UI"
url="https://github.com/NoiseByNorthwest/php-spx"
# ftbfs https://github.com/NoiseByNorthwest/php-spx/pull/305
arch="x86_64 aarch64"
license="GPL-3.0-or-later"
_phpv=85
_php=php$_phpv
depends="$_php-common"
_clang_ver=20
makedepends="$_php-dev clang$_clang_ver zlib-dev"
checkdepends="$_php-cgi"
source="php-$_extname-$pkgver.tar.gz::https://github.com/NoiseByNorthwest/php-spx/archive/v$pkgver.tar.gz
	fix-php85.patch"
builddir="$srcdir/php-$_extname-$pkgver"

build() {
	phpize$_phpv
	CC=clang-$_clang_ver \
	./configure --prefix=/usr --with-php-config=php-config$_phpv \
		--with-spx-assets-dir=/usr/share/$_php/$_extname
	make
}

check() {
	TEST_PHP_CGI_EXECUTABLE=/usr/bin/php-cgi$_phpv \
	make NO_INTERACTION=1 REPORT_EXIT_STATUS=1 test TESTS=--show-diff
	$_php -d extension=modules/$_extname.so --ri $_extname
}

package() {
	make INSTALL_ROOT="$pkgdir" install
	local _confdir="$pkgdir"/etc/$_php/conf.d
	install -d $_confdir
	echo "extension=$_extname" > $_confdir/$_extname.ini
}

sha512sums="
60ef13dc9396a1d21c8f9523f8b978f4b79159f063e72506b02a665e77c03ec04bd90bcc0feb8f5c573b82a54f3ec99a073a4e5686d7cff2bb1271b842e6238f  php-spx-0.4.20.tar.gz
e0ad3c478a7428472a492eadf6d91ffdfde95577d71c3cc5780ccc44543138d8176052ad6d435be4df642fb793ccabe2fe421511590116bb6cde2bde19b1b45b  fix-php85.patch
"
