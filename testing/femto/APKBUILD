maintainer="Georg Lehner <jorge@magma-soft.at>"
pkgname=femto
pkgver=2.24.1
pkgrel=0
pkgdesc="Tiny Emacs clone with tiny Lisp extension language"
url="https://github.com/jorge-leon/femto"
arch="all"
license="CC0-1.0"
makedepends="ncurses-dev"
case "$CARCH" in
x86_64|arch64) makedepends="$makedepends pandoc-cli" ;;
esac
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/jorge-leon/femto/archive/refs/tags/v$pkgver.tar.gz"

build() {
	case "$CARCH" in
	x86_64|aarch64) make doc PREFIX=/usr ;;
	esac
	make PREFIX=/usr
}

package() {
	make install PREFIX=/usr DESTDIR="$pkgdir"
}

check() {
	make check
}
sha512sums="
46f3a0d1bb9ad61c0e82675481c7fecdd1f5d2c2a9e29fda642cd37b98c933162c456d81fb0ff2cd813ce554f4107161c082efd84b02ace9f73a15c56dd5574b  femto-2.24.1.tar.gz
"
