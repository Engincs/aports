maintainer="Achill Gilgenat <achill@achill.org>"
pkgname=phosh-tour
pkgver=0.47.0
pkgrel=0
pkgdesc="Simple introduction to Phosh"
url="https://gitlab.gnome.org/World/Phosh/phosh-tour"
arch="all"
license="GPL-3.0-or-later"
makedepends="
	meson
	gtk4.0-dev
	libadwaita-dev
	gmobile-dev
	desktop-file-utils
	"
subpackages="$pkgname-lang"
source="https://sources.phosh.mobi/releases/phosh-tour/phosh-tour-${pkgver/_/.}.tar.xz"
builddir="$srcdir/$pkgname-${pkgver/_/.}"

build() {
	abuild-meson \
		. output
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output

	rm -r "$pkgdir"/usr/lib/systemd/
}

sha512sums="
0077ed46badb6de251865680fc7e6e26227e79d50bd16e55bdb9a2ca5987630402c313bcd20804f9a6fb18e46efbd617b9376d0e7dc06f9ac219c6799ac6d3b7  phosh-tour-0.47.0.tar.xz
"
