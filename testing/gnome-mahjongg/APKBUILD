maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=gnome-mahjongg
pkgver=49.0
pkgrel=0
pkgdesc="Match tiles and clear the board"
url="https://apps.gnome.org/Mahjongg/"
arch="all"
license="GPL-2.0-or-later"
makedepends="
	desktop-file-utils
	gtk4.0-dev
	libadwaita-dev
	librsvg-dev
	meson
	vala
	"
subpackages="$pkgname-doc $pkgname-lang"
source="https://download.gnome.org/sources/gnome-mahjongg/${pkgver%%.*}/gnome-mahjongg-$pkgver.tar.xz"

build() {
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
12b5358163e5e09b07e54cbbefb833a2809eccfc75a7660361717cc16d40b4d382ce510dd9752df7d3f3f438934988ba9f7bb4ccaed16eb86cc3091cae340067  gnome-mahjongg-49.0.tar.xz
"
