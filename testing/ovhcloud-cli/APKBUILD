# Contributor: Guy Godfroy <guy.godfroy@gugod.fr>
# Maintainer: Guy Godfroy <guy.godfroy@gugod.fr>
pkgname=ovhcloud-cli
pkgver=0.5.0
pkgrel=0
pkgdesc="Official Command Line Interface to manage OVHcloud services"
url="https://github.com/ovh/ovhcloud-cli"
arch="all"
license="Apache-2.0"
makedepends="go"
source="$pkgname-$pkgver.tar.gz::https://github.com/ovh/ovhcloud-cli/archive/refs/tags/v0.5.0.tar.gz"
options="net" #go deps

build() {
	go build -v -ldflags "-s -w -extldflags -static -X github.com/ovh/ovhcloud-cli/internal/version.Version=$pkgver" -o ovhcloud ./cmd/ovhcloud
}

check() {
	go test ./...
}

package() {
	install -Dm0755 ovhcloud -t "$pkgdir"/usr/bin/
}

sha512sums="
cd513904e66f85d7c3a2251daf004aa8ab6214e8810a24aa4f3b5e41794888a393e3a0a6e61aebf63de5e5ef3ae8b7febba7fae74bd375cfc73696c5fd757dfa  ovhcloud-cli-0.5.0.tar.gz
"
