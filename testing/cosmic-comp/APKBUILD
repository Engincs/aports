# Contributor: Clayton Craft <clayton@craftyguy.net>
# Maintainer: Clayton Craft <clayton@craftyguy.net>
pkgname=cosmic-comp
pkgver=1.0.0_beta1_p1
_upstreamver="${pkgver/_beta/-beta.}"
_upstreamver="${_upstreamver/_p/.}"
pkgrel=0
pkgdesc="Compositor for the COSMIC Desktop Environment"
url="https://github.com/pop-os/cosmic-comp"
# loongarch64: https://github.com/bytecodealliance/rustix/issues/1496
arch="all !loongarch64"
license="GPL-3.0-only"
makedepends="
	cargo
	fontconfig-dev
	libdisplay-info-dev
	libinput-dev
	libseat-dev
	libxcb-dev
	libxkbcommon-dev
	mesa-dev
	pixman-dev
	wayland-dev
"
options="net"  # fetch dependencies
source="
	$pkgname-$pkgver.tar.gz::https://github.com/pop-os/cosmic-comp/archive/refs/tags/epoch-$_upstreamver.tar.gz
	libdisplay-info-0.3.0.patch
"
builddir="$srcdir/$pkgname-epoch-$_upstreamver"

prepare() {
	default_prepare
	cargo fetch --target="$CTARGET" --locked
}

build() {
	make ARGS+=" --frozen --release"
}

check() {
	cargo test --release --frozen
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
b3e0a1f3d095230e24bca6d9097ee65a476ca47d5e3bc00439b805925a59d8d9a646d802025b81a0292256fa9fcdc8670ada7c235eb7ebeb0e478c56e24e9ba9  cosmic-comp-1.0.0_beta1_p1.tar.gz
80e0d15ab72b861f7440038f972af8e109940ea55dd9a466f36f90444e7444b6480ca79e47b42f6d4ea2580dcbc15e61493a1b6ce9404a34c3cbaf1e8844a888  libdisplay-info-0.3.0.patch
"
