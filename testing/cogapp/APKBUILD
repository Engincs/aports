# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=cogapp
pkgver=3.5.1
pkgrel=0
pkgdesc="Content generation tool that leverages Python"
url="https://github.com/nedbat/cog"
arch="noarch"
license="MIT"
makedepends="py3-gpep517 py3-setuptools"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/nedbat/cog/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/cog-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
d8858cb59548b38d52135d2970f4558a2cec25d881d899ffb06222c2c891c7a76bc3bd4ef41ed12b51be756ac7ddeff675a8627d9e68b6e8ae88c9a503c43c1b  cogapp-3.5.1.tar.gz
"
