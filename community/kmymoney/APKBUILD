# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kmymoney
pkgver=5.2.1
pkgrel=0
# armhf, ppc64le, s390x, riscv64 and loongarch64 blocked by qt5-qtwebengine
arch="all !armhf !ppc64le !s390x !riscv64 !loongarch64"
url="https://kmymoney.org/"
pkgdesc="Personal finance manager for KDE which operates similarly to MS-Money or Quicken"
license="GPL-2.0-or-later"
makedepends="
	akonadi-dev
	alkimia-dev
	doxygen
	extra-cmake-modules
	gpgme-dev
	kactivities5-dev
	karchive5-dev
	kcmutils5-dev
	kcompletion5-dev
	kconfig5-dev
	kconfigwidgets5-dev
	kcontacts5-dev
	kcoreaddons5-dev
	kdiagram-dev
	kdoctools5-dev
	kholidays5-dev
	ki18n5-dev
	kiconthemes5-dev
	kidentitymanagement-dev
	kio5-dev
	kitemmodels5-dev
	kitemviews5-dev
	knotifications5-dev
	kservice5-dev
	ktextwidgets5-dev
	kwallet5-dev
	kxmlgui5-dev
	qt5-qtbase-dev
	qt5-qtsvg-dev
	qt5-qtwebengine-dev
	samurai
	"
checkdepends="xwayland-run"
_repo_url="https://invent.kde.org/office/kmymoney.git"
source="https://download.kde.org/stable/kmymoney/$pkgver/kmymoney-$pkgver.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

case $CARCH in
aarch64) options="!check" ;; # Segfault / child aborted errors on 3-12 builder
esac

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DENABLE_WEBENGINE=ON
	cmake --build build
}

check() {
	# reports-chart-test requires OpenGL
	# csvimport-csvdate-test is broken
	wlheadless-run -- ctest --test-dir build -E "(reports-chart|csvimport-csvdate)-test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
99145f8515f5cbc811185b4e375f85d8a4bf9f57eeb30927b453cd7071990484650b9b7353f25e71d632e5b2468c204905c3df85fe3ab0a8b0cd7611f4c1c3a3  kmymoney-5.2.1.tar.xz
"
