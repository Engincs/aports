# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=knighttime
pkgver=6.5.0
pkgrel=0
pkgdesc="Helpers for scheduling the dark-light cycle"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.0-or-later AND LGPL-2.1-or-later"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kholidays-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtpositioning-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	samurai
	"
case "$pkgver" in
	*.*.9*) _rel=unstable;;
	*) _rel=stable;;
esac

# strip fourth version component for source URL
case "$pkgver" in
	*.*.*.*) _pkgver="${pkgver%.*}" ;;
	*) _pkgver="$pkgver" ;;
esac

subpackages="$pkgname-dev"
_repo_url="https://invent.kde.org/plasma/knighttime.git"
source="https://download.kde.org/$_rel/plasma/$_pkgver/knighttime-$pkgver.tar.xz"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
c5725af447209ea8ef29c23d0e586d0e6d9ce43b7816e1573f654e34b1b58d42f9c03218c822779a690384127ba8c009a5788236e5e203a34bbc85024ccde5c8  knighttime-6.5.0.tar.xz
"
