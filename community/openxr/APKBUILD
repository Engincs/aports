# Maintainer: Leon Marz <main@lmarz.org>
pkgname=openxr
pkgver=1.1.52
pkgrel=0
pkgdesc="OpenXR loader library"
url="https://khronos.org/openxr"
arch="all"
license="Apache-2.0"
makedepends="cmake
	jsoncpp-dev
	jsoncpp-static
	mesa-dev
	samurai
	vulkan-loader-dev
	wayland-dev
	"
subpackages="$pkgname-dev $pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/KhronosGroup/OpenXR-SDK/archive/release-$pkgver.tar.gz"
builddir="$srcdir/OpenXR-SDK-release-$pkgver"
options="!check" # no check available

build() {
	case "$CARCH" in
		armhf)
			export CXXFLAGS="$CXXFLAGS -D_M_ARM" ;;
	esac

	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_BUILD_TYPE=Release
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e333abb28934883111a6760d7c4c956efb97b0b7ecec65a4e430010b7290c4b7af01a831ec798444293d29d84a91b74593c6a5d1f59fcbc958495ee9d0f7da78  openxr-1.1.52.tar.gz
"
