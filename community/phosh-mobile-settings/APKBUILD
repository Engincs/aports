# Contributor: Newbyte <newbie13xd@gmail.com>
# Maintainer: team/phosh <newbie13xd@gmail.com>
pkgname=phosh-mobile-settings
pkgver=0.49.0
pkgrel=0
pkgdesc="Settings app for mobile specific things"
url="https://gitlab.gnome.org/World/Phosh/phosh-mobile-settings"
# blocked by phosh
arch="all !armhf"
license="GPL-3.0-or-later"
makedepends="
	cellbroadcastd-dev
	desktop-file-utils
	feedbackd-dev
	glib-dev>=2.62
	gmobile-dev
	gnome-desktop-dev
	gsound-dev
	gtk4.0-dev
	json-glib-dev
	libadwaita-dev
	libportal-dev
	lm-sensors-dev
	meson
	phosh-dev
	pulseaudio-dev
	"
subpackages="$pkgname-lang"
source="https://sources.phosh.mobi/releases/phosh-mobile-settings/phosh-mobile-settings-${pkgver/_/.}.tar.xz"
builddir="$srcdir/$pkgname-${pkgver/_/.}"

build() {
	abuild-meson \
		-Db_lto=true \
		. output
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild --skip-subprojects -C output
}

sha512sums="
9519bf966d14968548284384c6f194219216919d82a936cb34941c78edda51625825e3fa3d5856bac89a54d08c2176a5801ee6dfe1b345405d8e06fa0cf6600f  phosh-mobile-settings-0.49.0.tar.xz
"
