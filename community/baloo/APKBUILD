# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=baloo
pkgver=6.17.0
pkgrel=0
pkgdesc="A framework for searching and managing metadata"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later AND ( LGPL-2.1-only OR LGPL-3.0-only )"
depends_dev="
	kbookmarks-dev
	kcompletion-dev
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kfilemetadata-dev
	ki18n-dev
	kidletime-dev
	kio-dev
	kjobwidgets-dev
	kservice-dev
	lmdb-dev
	qt6-qtdeclarative-dev
	solid-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	qt6-qtdeclarative-private-dev
	qt6-qtbase-dev
	samurai
	"
checkdepends="dbus"
subpackages="
	$pkgname-dbg
	$pkgname-dev
	$pkgname-libs
	$pkgname-doc
	$pkgname-lang
	"
_repo_url="https://invent.kde.org/frameworks/baloo.git"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/baloo-$pkgver.tar.xz"

replaces="baloo5"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING="$(want_check && echo ON || echo OFF)"
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

check() {
	local exclude=
	case "$CARCH" in
		armv7) exclude='|writetransactiontest|fileindexerconfigtest' ;;
		loongarch64) exclude='|fileindexerconfigtest' ;;
		riscv64) exclude='|querytest|writetransactiontest|basicindexingbenchmark_ts|metadatamovertest|filefetchjobtest' ;;
		s390x) exclude='|positioncodectest|fileindexerconfigtest' ;;
	esac
	dbus-run-session -- ctest --test-dir build -E "filewatchtest|fileindexerconfigtest$exclude"
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs

	# We don't ship systemd
	rm -r "$pkgdir"/usr/lib/systemd
}

libs() {
	default_libs

	amove usr/lib/qt6
}

sha512sums="
2f34a9d6285bfc5706cccef6cb7ea0adf8907520cec25966bed814fe2ca0320be1af8082a0d8a1613ef17af8e3feaf05c046615fe4ce1be0618afe87b40c5ffc  baloo-6.17.0.tar.xz
"
