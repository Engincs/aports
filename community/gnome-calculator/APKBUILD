# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: team/gnome <pabloyoyoista@postmarketos.org>
pkgname=gnome-calculator
pkgver=49.1
pkgrel=0
pkgdesc="Calculator for solving mathematical equations"
url="https://apps.gnome.org/Calculator"
arch="all !armhf !armv7 !x86" # https://gitlab.gnome.org/GNOME/gnome-calculator/-/issues/503
license="GPL-3.0-or-later"
makedepends="
	blueprint-compiler
	glib-dev
	gtksourceview5-dev
	gtk4.0-dev
	itstool
	libadwaita-dev
	libgee-dev
	libsoup3-dev
	libxml2-dev
	meson
	mpc1-dev
	mpfr-dev
	vala
	"
subpackages="$pkgname-devhelp $pkgname-doc $pkgname-lang $pkgname-dev"
source="https://download.gnome.org/sources/gnome-calculator/${pkgver%%.*}/gnome-calculator-$pkgver.tar.xz"

build() {
	abuild-meson \
		-Db_lto=true \
		. output
	meson compile -C output
}

check() {
	# loongarch64, armhf, ppc64le and riscv64 timeouted number test with standard timeout
	meson test -t 10 --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
602d439982885da7f68f228dab35b94dbc70893ad262d2a79c445bba651a518817bca2c37fa4bbee92deb4c429b7a81d440506bd18c0ee0993b68a055fd5e4c3  gnome-calculator-49.1.tar.xz
"
