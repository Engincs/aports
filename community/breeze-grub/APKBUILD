# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=breeze-grub
pkgver=6.5.0
pkgrel=0
pkgdesc="Breeze theme for GRUB"
arch="noarch !s390x" # s390x blocked by grub
url="https://kde.org/plasma-desktop/"
license="GPL-3.0-or-later"
depends="grub"
makedepends="
	font-unifont
	grub-mkfont
	"

case "$pkgver" in
	*.*.9*) _rel=unstable;;
	*) _rel=stable;;
esac

_repo_url="https://invent.kde.org/plasma/breeze-grub.git"
source="https://download.kde.org/$_rel/plasma/$pkgver/breeze-grub-$pkgver.tar.xz
	fontpath.patch
	"
# No test suite available
options="!check"

build() {
	./mkfont.sh
}

package() {
	install -d "$pkgdir"/usr/share/grub/themes
	cp -r breeze "$pkgdir"/usr/share/grub/themes
}
sha512sums="
883f257739b1c828fff40fcca3d1677ffdf991fd89b89b619e1669e57550f09d15ffc3f282696b9a25dbd4c286a7169040acd9605ed63ac11f1b9afdb8ca89ae  breeze-grub-6.5.0.tar.xz
3cc8ea5d676ad192b6831f5989a5113815d92bc2a413f73efc7fc91611b26712626eeec8048a3d6d31c4b0ead84a200fd708d9a125853a775c6a5748efcca13d  fontpath.patch
"
