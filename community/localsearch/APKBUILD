# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: team/gnome <achill@achill.org>
pkgname=localsearch
pkgver=3.10.0
pkgrel=1
pkgdesc="Data miners for tracker"
url="https://gitlab.gnome.org/GNOME/localsearch"
arch="all"
license="GPL-2.0-or-later"
depends="tinysparql"
makedepends="
	asciidoc
	dbus-dev
	enca-dev
	exempi-dev
	ffmpeg-dev
	flac-dev
	gexiv2-dev
	giflib-dev
	glib-dev
	gobject-introspection-dev
	gst-plugins-base-dev
	gstreamer-dev
	icu-dev
	libexif-dev
	libgsf-dev
	libgudev-dev
	libiptcdata-dev
	libjpeg-turbo-dev
	libosinfo-dev
	libpng-dev
	libseccomp-dev
	libvorbis-dev
	libxml2-dev
	meson
	networkmanager-dev
	poppler-dev
	taglib-dev
	tiff-dev
	tinysparql-dev
	totem-pl-parser-dev
	upower-dev
	zlib-dev
	"
checkdepends="
	bash
	coreutils
	py3-gobject3
	python3
	"
subpackages="$pkgname-dbg $pkgname-lang $pkgname-doc"
source="https://download.gnome.org/sources/localsearch/${pkgver%.*}/localsearch-$pkgver.tar.xz
	10-landlock-non-usrmerge.patch
	"
options="!check" # needs to install itself

# for backwards compatibility
replaces="tracker-miners"
provides="tracker-miners=$pkgver-r$pkgrel"

build() {
	abuild-meson \
		-Db_lto=true \
		-Dfunctional_tests="$(want_check && echo true || echo false)" \
		-Dsystemd_user_services=false \
		-Dlandlock=enabled \
		. output
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

