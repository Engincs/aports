# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: team/gnome <pabloyoyoista@postmarketos.org>
pkgname=gnome-characters
pkgver=49.0
pkgrel=0
pkgdesc="A simple utility application to find and insert unusual characters"
url="https://apps.gnome.org/Characters"
# armhf blocked by gjs
arch="all !armhf"
license="BSD-3-Clause AND GPL-2.0-or-later"
depends="
	gjs
	gnome-desktop
	gtk4.0
	libadwaita
	"
makedepends="
	desktop-file-utils
	gjs-dev
	glib-dev
	gtk4.0-dev
	libadwaita-dev
	meson
	pango-dev
	"
options="!check" # no tests
subpackages="$pkgname-lang"
source="https://download.gnome.org/sources/gnome-characters/${pkgver%.*}/gnome-characters-$pkgver.tar.xz"

build() {
	abuild-meson . output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
2a74d630a97421b1e9b0f9851cba6eb64db1541a1e3745d88cd0f9323414c221830cb610809149d4ee440ccb6099566f135d19cf12ebc63d3c973acd98539cfc  gnome-characters-49.0.tar.xz
"
