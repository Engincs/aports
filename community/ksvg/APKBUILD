# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=ksvg
pkgver=6.17.0
pkgrel=0
pkgdesc="Configuration system"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND LGPL-2.0-only AND LGPL-2.1-or-later"
depends_dev="
	karchive-dev
	kcolorscheme-dev
	kconfig-dev
	kcoreaddons-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	kguiaddons-dev
	kirigami-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	kde-qdoc-common
	samurai
	"
checkdepends="xwayland-run"
subpackages="$pkgname-dev $pkgname-doc"
_repo_url="https://invent.kde.org/frameworks/ksvg.git"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/ksvg-$pkgver.tar.xz"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

check() {
	wlheadless-run -- ctest --test-dir build -E 'ksvg(core-(ksvgtest|kdesktopfiletest|test_kconf_update)|gui-kstandardshortcutwatchertest)'
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}
sha512sums="
56b83e186d15c8c0cd398daafb39466c3ce464ce3bbf1290bba56876999313993df919994175cea89f6c6bf8a5fac845dbf79439522dce83be800f6151b0b9a6  ksvg-6.17.0.tar.xz
"
