# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdeplasma-addons
pkgver=6.4.5
pkgrel=0
pkgdesc="All kind of addons to improve your Plasma experience"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.0-only AND GPL-2.0-or-later"
depends="purpose"
depends_dev="
	icu-dev
	karchive-dev
	kcmutils-dev
	kconfig-dev
	kcoreaddons-dev
	kdeclarative-dev
	kholidays-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	knewstuff-dev
	knotifications-dev
	krunner-dev
	kservice-dev
	kunitconversion-dev
	kwindowsystem-dev
	networkmanager-qt-dev
	libplasma-dev
	plasma5support-dev>=$pkgver
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	sonnet-dev
	"
case "$CARCH" in
	x86_64|armhf|armv7|aarch64)
		depends_dev="$depends_dev qt6-qtwebengine-dev"
		;;
esac
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	"
checkdepends="xwayland-run"
subpackages="$pkgname-dev $pkgname-lang"

case "$pkgver" in
	*.*.9*) _rel=unstable ;;
	*) _rel=stable ;;
esac
_repo_url="https://invent.kde.org/plasma/kdeplasma-addons.git"
source="https://download.kde.org/$_rel/plasma/$pkgver/kdeplasma-addons-$pkgver.tar.xz"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# converterrunnertest is broken
	# datetimerunnertest requires running Wayland session
	wlheadless-run -- ctest --test-dir build -E "(converterrunner|datetimerunner)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
22834cf34ffe9437720aadb4b21e3f1fecce75162132dceef2866cf2a43f6a6fd0a04b51540c91150af29f9395ac6b197ad75fdf21413dbba77393af3bca1358  kdeplasma-addons-6.4.5.tar.xz
"
