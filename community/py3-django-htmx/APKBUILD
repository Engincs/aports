# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=py3-django-htmx
pkgver=1.24.1
pkgrel=0
pkgdesc="Extensions for using Django with htmx"
url="https://django-htmx.readthedocs.io/"
arch="noarch"
license="MIT"
depends="
	py3-asgiref
	py3-django
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="py3-pytest-django"
subpackages="$pkgname-pyc"
source="https://github.com/adamchainz/django-htmx/archive/$pkgver/py3-django-htmx-$pkgver.tar.gz"
builddir="$srcdir/django-htmx-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
5701ab1913c7a3710fd24abbddecb5fe7de201783bed47a44cfc2b4e5fb2bee69c6e083114b6fd011373ccc5e9402ebbb5d3f2c780616ac26e5a188f7c27175b  py3-django-htmx-1.24.1.tar.gz
"
