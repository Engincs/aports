# Contributor: Iztok Fister, Jr. <iztok@iztok-jr-fister.eu>
maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=py3-pyforgejo
pkgver=2.0.5
pkgrel=0
pkgdesc="A client library for accessing the Forgejo API"
url="https://codeberg.org/harabat/pyforgejo"
arch="noarch"
license="MIT"
depends="
	py3-httpx
	py3-attrs
	py3-dateutil
	"
makedepends="py3-gpep517 py3-poetry-core"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://codeberg.org/harabat/pyforgejo/archive/$pkgver.tar.gz"
builddir="$srcdir/pyforgejo"
options="!check" # no tests

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
5980730c18c0df4d08b821a536bbbb323d6414e9567835fa6ad7a201c3b5412497aa23b57145726dc17cc62f65bf329a13f9bf45b1b31f8c3297b8bdfcd7e30c  py3-pyforgejo-2.0.5.tar.gz
"
