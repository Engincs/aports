# Contributor: Fabian Affolter <fabian@affolter-engineering.ch>
# Maintainer: Patrycja Rosa <alpine@ptrcnull.me>
pkgname=py3-dulwich
_pkgname=dulwich
pkgver=0.24.2
pkgrel=0
pkgdesc="Python implementation of the Git file formats and protocols"
url="https://www.dulwich.io/"
arch="all"
license="GPL-2.0-or-later OR Apache-2.0"
depends="py3-certifi py3-urllib3"
makedepends="py3-setuptools-rust python3-dev py3-gpep517 py3-wheel"
checkdepends="py3-mock py3-gpgme py3-gevent py3-merge3 py3-paramiko"
subpackages="$pkgname-pyc"
source="https://github.com/jelmer/dulwich/archive/$_pkgname-$pkgver.tar.gz
	skip-network-tests.patch
	"
builddir="$srcdir"/$_pkgname-dulwich-$pkgver

replaces="py-dulwich" # Backwards compatibility
provides="py-dulwich=$pkgver-r$pkgrel" # Backwards compatibility

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m unittest tests.test_suite
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
	rm -r "$pkgdir"/usr/lib/python3*/site-packages/dulwich/tests/
}

sha512sums="
77aa08d93bc878cd04e9cf9eca0be7a7c53aca63e9e3665ddaf7d229d3ca3e74d389d3d9ccffea9e2c16ea8956b602b127c3d28031f76ccf711b66185f01b2b1  dulwich-0.24.2.tar.gz
b5f37e2790b3d8243b47749ca8b6a90b0a92fa44221d14b8a26b3faceb9dca4c82392514c516eb6a3d3f11534f3b106ed26d6a24ea9e9d278a5aa7879f10994c  skip-network-tests.patch
"
