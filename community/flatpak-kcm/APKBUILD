# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=flatpak-kcm
pkgver=6.5.0
pkgrel=0
pkgdesc="Flatpak Permissions Management KCM"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="kirigami"
makedepends="
	extra-cmake-modules
	flatpak-dev
	kcmutils-dev
	kconfig-dev
	kdeclarative-dev
	ki18n-dev
	kitemmodels-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="xwayland-run"

case "$pkgver" in
	*.*.9*) _rel=unstable;;
	*) _rel=stable;;
esac

subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/plasma/flatpak-kcm.git"
source="https://download.kde.org/$_rel/plasma/$pkgver/flatpak-kcm-$pkgver.tar.xz"
install_if="flatpak systemsettings"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# flatpakpermissiontest is broken
	wlheadless-run -- ctest --test-dir build -E "flatpakpermissiontest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
3a1f6efe3ed4c612efa03cfe3b96841e879a4130e56982fef6e2b89012c743ceec330e3142e2c38bd52c3500177ae6bcec45115085659870bc3134918315ec1b  flatpak-kcm-6.5.0.tar.xz
"
