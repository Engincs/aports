# Contributor: Leo <thinkabit.ukim@gmail.com>
# Maintainer: Will Sinatra <wpsinatra@gmail.com>
maintainer="Will Sinatra <wpsinatra@gmail.com>"
pkgname=py3-ufo2ft
pkgver=3.6.3
pkgrel=0
pkgdesc="bridge from UFOs to FontTools objects"
url="https://github.com/googlefonts/ufo2ft"
arch="noarch"
license="MIT"
depends="
	py3-booleanoperations
	py3-cffsubr
	py3-fontmath
	py3-fonttools
	py3-fs
	py3-ufolib2
	python3
	"
makedepends="
	py3-gpep517
	py3-fontmath
	py3-defcon
	py3-setuptools
	py3-setuptools_scm
	py3-wheel
	"
checkdepends="
	py3-compreffor
	py3-pytest
	py3-pytest-runner
	py3-pytest-xdist
	py3-skia-pathops
	py3-syrupy
	"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/googlefonts/ufo2ft/archive/v$pkgver.tar.gz"
builddir="$srcdir/ufo2ft-$pkgver"

case "$CARCH" in
s390x)
	options="$options !check"
	;;
esac

build() {
	SETUPTOOLS_SCM_PRETEND_VERSION=$pkgver \
		gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest -n auto -p no:warnings -k \
		'not integration_test'
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
c5c2fa06ef5720f5b25124f431e314e16c14ae6f597828d8382f727f19c138d146046ca8878db6bef7d3925765160ae9c9f40b27923baa1501f65a0c97ec9b5d  py3-ufo2ft-3.6.3.tar.gz
"
