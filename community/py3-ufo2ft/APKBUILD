# Contributor: Leo <thinkabit.ukim@gmail.com>
# Maintainer: Will Sinatra <wpsinatra@gmail.com>
maintainer="Will Sinatra <wpsinatra@gmail.com>"
pkgname=py3-ufo2ft
pkgver=3.6.6
pkgrel=0
pkgdesc="bridge from UFOs to FontTools objects"
url="https://github.com/googlefonts/ufo2ft"
arch="noarch"
license="MIT"
depends="
	py3-booleanoperations
	py3-cffsubr
	py3-fontmath
	py3-fonttools
	py3-fs
	py3-ufolib2
	python3
	"
makedepends="
	py3-gpep517
	py3-fontmath
	py3-defcon
	py3-setuptools
	py3-setuptools_scm
	py3-wheel
	"
checkdepends="
	py3-compreffor
	py3-pytest
	py3-pytest-runner
	py3-pytest-xdist
	py3-skia-pathops
	py3-syrupy
	"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/googlefonts/ufo2ft/archive/v$pkgver.tar.gz"
builddir="$srcdir/ufo2ft-$pkgver"

case "$CARCH" in
s390x)
	options="$options !check"
	;;
esac

build() {
	SETUPTOOLS_SCM_PRETEND_VERSION=$pkgver \
		gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest -n auto -p no:warnings -k \
		'not integration_test'
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
bcbb2c3b8577f76c198378672959d289ebb59c951e7e8aa1b0a067a99cbfd0b544d17f7e49bc89220f5b8c7c4681cf7f50e54447af733469472ff045b41ca79c  py3-ufo2ft-3.6.6.tar.gz
"
