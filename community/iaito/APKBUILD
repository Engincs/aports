# Maintainer: omni <omni+alpine@hack.org>
maintainer="omni <omni+alpine@hack.org>"
pkgname=iaito
pkgver=6.0.0
pkgrel=0
pkgdesc="Official QT frontend of radare2"
url="https://www.radare.org/n/iaito.html"
license="GPL-3.0-only"
arch="all"
depends="radare2
	graphviz
	qt6-qtsvg
	"
makedepends="radare2-dev
	bash
	qt6-qtsvg-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/radareorg/iaito/archive/refs/tags/$pkgver.tar.gz"
options="!check" # no testsuite

build() {
	./configure \
		--with-qmake6 \
		--build=$CBUILD \
		--target=$CTARGET \
		--prefix=/usr \
		--sysconfdir=/etc
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
1b915b5498194047c0f7efb654eec05d042b641f746eca30abc1974630a94e8230925f51c390d67c2134aea83842c11ecb8fb824de75ba57fec96deca6df5f94  iaito-6.0.0.tar.gz
"
