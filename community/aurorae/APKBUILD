# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <achill@achill.org>"
pkgname=aurorae
pkgver=6.4.4
pkgrel=0
pkgdesc="Themeable window decoration for KWin"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
makedepends="
	cmake
	extra-cmake-modules
	kcmutils-dev
	kcolorscheme-dev
	kconfig-dev
	kcoreaddons-dev
	kdecoration-dev
	ki18n-dev
	knewstuff-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-lang"

case "$pkgver" in
	*.*.9*) _rel=unstable;;
	*) _rel=stable;;
esac

_repo_url="https://invent.kde.org/plasma/aurorae.git"
source="https://download.kde.org/$_rel/plasma/$pkgver/aurorae-$pkgver.tar.xz"
options="!check" # No tests

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
dc85c1d652b610ce3a698c7ac008dcc000a42c278f62ae6f0d386fb92e1becebcc5b0eda4865d0cafd0a34bd74005a8294f5adaef22d871b6e719455d59ca79f  aurorae-6.4.4.tar.xz
"
