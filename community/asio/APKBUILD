# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=asio
pkgver=1.21.0
pkgrel=0
pkgdesc="Cross-platform C++ library for network programming"
url="https://think-async.com/Asio/"
arch="all"
license="BSL-1.0"
depends_dev="boost-dev openssl1.1-compat-dev"
makedepends="$depends_dev"
subpackages="$pkgname-dev"
source="https://downloads.sourceforge.net/sourceforge/asio/asio-$pkgver.tar.bz2"

prepare() {
	default_prepare

	update_config_sub
	update_config_guess
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--mandir=/usr/share/man
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
62252b2d3ca4fb99579c5fe57bf64b700792198dd7fa45acb4af7f64e83494bade1885b848f9e364f4c42d9db025841324cbd9a0fd3fe45526e7e4be6f60f8c0  asio-1.21.0.tar.bz2
"
