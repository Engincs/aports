# Contributor: jane400 <alpine@j4ne.de>
# Maintainer: team/phosh <newbyte@postmarketos.org>
pkgname=stevia
pkgver=0.50.0
pkgrel=0
pkgdesc="Alternative OSK for phosh"
arch="all"
url="https://gitlab.gnome.org/World/Phosh/stevia"
license="GPL-3.0-or-later"
subpackages="$pkgname-doc $pkgname-lang"
makedepends="
	cmd:rst2man
	elogind-dev
	feedbackd-dev
	glib-dev
	gmobile-dev
	gnome-desktop-dev
	gtk+3.0-dev
	hunspell-dev
	json-glib-dev
	libhandy1-dev
	meson
	wayland-dev
	wayland-protocols
	"
checkdepends="xvfb-run"
source="https://gitlab.gnome.org/World/Phosh/stevia/-/archive/v$pkgver/stevia-v$pkgver.tar.gz"
builddir="$srcdir/stevia-v$pkgver"

provides="phosh-keyboard=0 phosh-osk-stub=$pkgver-r$pkgrel"
provider_priority=1
replaces="phosh"

case "$CARCH" in
	# https://gitlab.gnome.org/guidog/stevia/-/issues/61
	s390x) options="$options !check" ;;
esac

build() {
	abuild-meson \
		-Db_lto=true \
		-Dman=true \
		. output
	meson compile -C output
}

check() {
	xvfb-run -a meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
a449e85cde7d4c5abecf0482569496da3db62f43c08df047b54b5b885b6f20d5103d2bf3a0e8518da8c1add26db0591e0a913016b8b3747d5d287cba64a509ef  stevia-v0.50.0.tar.gz
"
