# Contributor: jane400 <alpine@j4ne.de>
# Maintainer: team/phosh <newbyte@postmarketos.org>
pkgname=stevia
pkgver=0.49.0
pkgrel=1
pkgdesc="Alternative OSK for phosh"
arch="all"
url="https://gitlab.gnome.org/World/Phosh/stevia"
license="GPL-3.0-or-later"
subpackages="$pkgname-doc $pkgname-lang"
makedepends="
	cmd:rst2man
	elogind-dev
	feedbackd-dev
	glib-dev
	gmobile-dev
	gnome-desktop-dev
	gtk+3.0-dev
	hunspell-dev
	json-glib-dev
	libhandy1-dev
	meson
	wayland-dev
	wayland-protocols
	"
checkdepends="xvfb-run"
source="https://gitlab.gnome.org/World/Phosh/stevia/-/archive/v$pkgver/stevia-v$pkgver.tar.gz"
builddir="$srcdir/stevia-v$pkgver"

provides="phosh-keyboard=0 phosh-osk-stub=$pkgver-r$pkgrel"
provider_priority=1
replaces="phosh"

case "$CARCH" in
	# https://gitlab.gnome.org/guidog/stevia/-/issues/61
	s390x) options="$options !check" ;;
esac

build() {
	abuild-meson \
		-Db_lto=true \
		-Dman=true \
		. output
	meson compile -C output
}

check() {
	xvfb-run -a meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
13e2a726ab8945a8a25b82e612a8ed4f3c380ae1a9e5bb190779c3f8f3e1b485c06f34989ce93b6f89a5324f9ae065cd8f355f49365055df492da5d331760e2b  stevia-v0.49.0.tar.gz
"
